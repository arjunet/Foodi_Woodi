<WelcomeScreenView>:
    FloatLayout:
        size_hint: 1, 1
        padding: dp(16)

        MDBoxLayout:
            orientation: 'vertical'
            adaptive_height: True
            spacing: dp(128)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}

            FitImage:
                source: "assets/images/icon.png"
                size_hint: None, None
                size: dp(128), dp(128)
                radius: dp(16)
                pos_hint: {'center_x': 0.5}
            
            MDLabel:
                text: "Foodie Woodie"
                font_style: "Display"
                role: "small"
                theme_font_name: "Custom"
                font_name: "nasalization"
                color: app.theme_cls.onSurfaceVariantColor
                halign: "center"

            MDButton:
                style: "tonal"
                pos_hint: {'center_x': 0.5}
                
                MDButtonText:
                    text: "Log In"
                
                MDButtonIcon:
                    icon: "arrow-right"